extends _shared/base/layout
include _shared/mixins/navigation
include _shared/mixins/breadcrump

block css
      link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css")

block js
    script(src="https://cdnjs.cloudflare.com/ajax/libs/validator/8.0.0/validator.min.js")
    script(src='http://cdn.rawgit.com/h2non/jsHashes/master/hashes.js')
    script(src='/public/js/register.js')

block navigation
    +nav()

block breadcrump
    +breadcrump(['Home', '-Auth', 'Register'])

block content
    form#signup-form.form-horizontal(action="/auth/register" method="POST")
        fieldset
            #progress-bar.progress.hidden
                .progress-bar.progress-bar-info(role="progressbar" aria-valuemin="0" aria-valuemax="100")
            .col-md-6.col-sm-12.col-xs-12.form-group
                .control-group.col-md-offset-1
                    .profile-image  
                    label.control-label(for='photo-selector') Upload a different photo...
                    .input-group
                        input#image-id(type='hidden', name='image-id', value="default-profile-picture")
                        label.input-group-btn
                            span.btn.btn-primary Browseâ€¦ 
                                input#photo-selector(name="file" type="file", style='display: none;', multiple='')
                        input#file-path.form-control(type='text', readonly='')
            .col-md-6.col-sm-12.col-xs-12.form-group
                .control-group.col-md-offset-1
                    label.control-label(for='signup-username') Username
                    .controls
                        input#signup-username.form-control.input-lg(type='text', name='username', placeholder='Username', autofocus='')
                        p#help-username.help-block
                            | Username must contain only letters/numbers and be between 4 and 10 long.
                .control-group.col-md-offset-1
                    label.control-label(for='signup-password') Password
                    .controls
                        input#signup-password.form-control.input-lg(type='password', name='password', placeholder='Password')
                        p#help-password.help-block
                            | Password must be between 4 and 100 characters long.
                .control-group.col-md-offset-1
                    label.control-label(for='signup-password-confirm') Password (Confirm)
                    .controls
                        input#signup-password-confirm.form-control.input-lg(type='password', name='password-confirm', placeholder='Repeat Password')
                        p#help-password-confirm.help-block
                            | Please confirm password
            .col-md-6.col-sm-12.col-xs-12.form-group
                .control-group.col-md-offset-1
                    label.control-label(for='signup-first-name') First Name
                    .controls
                        input#signup-first-name.form-control.input-lg(type='text', name='first-name', placeholder='First Name')
                        p#help-first-name.help-block
                            | First Name must be between 1 and 10 characters long.
                .control-group.col-md-offset-1
                    label.control-label(for='signup-last-name') Last Name
                    .controls
                        input#signup-last-name.form-control.input-lg(type='text', name='last-name', placeholder='Last Name')
                        p#help-last-name.help-block
                            | Last Name First Name must be between 1 and 10 characters long.
            .col-md-6.col-sm-12.col-xs-12.form-group
                .control-group.col-md-offset-1
                    label.control-label(for='signup-e-mail') E-mail
                    .controls
                        input#signup-email.form-control.input-lg(type='email', name='e-mail', placeholder='E-mail')
                        p#help-email.help-block
                            | Please provide your E-mail
                .control-group.col-md-offset-1
                    .controls.offset-top
                        input#signup-submit.btn.btn-success.btn-lg(type="submit" value="Register")
                        a#signin-btn.btn.btn-default.offset-left.col-sx-offset-1(href="/auth/login") Login
                        a.btn.btn-primary.offset-left.col-sx-offset-1(href="/auth/facebook")
                            span.fa.fa-facebook Facebook
                        a.btn.btn-primary.btn-info.offset-left.col-sx-offset-1(href="/auth/twitter")
                            span.fa.fa-twitter Twitter
                        a.btn.btn-primary.btn-danger.offset-left.col-sx-offset-1(href="/auth/google")
                            span.fa.fa-google-plus Google+
