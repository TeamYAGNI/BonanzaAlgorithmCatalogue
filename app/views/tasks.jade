extends _shared/base/layout
include _shared/mixins/navigation

block css
    link(rel='stylesheet', href='https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css')

block js
    script(src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js")
    script(src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js")
    script(src="/public/js/tasks.js")

block navigation
    +nav(user, '/tasks')

block content
    h1.text-center Tasks
    table#tasks-table.table.table-hover.table-striped.table-bordered(cellspacing='0')
        thead
            tr
                th Name
                th Tags
                th Result
        tfoot
            tr
                th Name
                th Tags
                th Result
        tbody
            each task in tasks
                tr
                    td
                        a.list-group-item(href='/tasks/' + task._id) #{task.name}
                    td 
                        each tag in task.tags
                            a.btn.btn-secondary(href='/catalogue/' + tag.substr(1), role='button', data-toggle='tooltip', data-placement='bottom', data-original-title='Go to catalogue category: ' + tag.substr(1)) #{tag}
                    td 0 / #{task.results.length * 10}